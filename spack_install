#!/usr/bin/env bash
#
# spack_install  — build a package with the *site* Spack while
#                   writing everything into your own $HOME.
#
# Usage:  spack_install PACKAGE [INSTALL_PATH]
#         default INSTALL_PATH = $HOME/spack_installs
#
set -euo pipefail

# ------------------------- parse arguments --------------------------
pkg=${1:-}
if [[ -z ${pkg} ]]; then
  cat <<EOF
Usage: spack_install PACKAGE [INSTALL_PATH]

If INSTALL_PATH is omitted, packages are installed under:
  \$HOME/spack_installs

Verify that PACKAGE exists with:
  spack list PACKAGE
EOF
  exit 1
fi

install_path=${2:-"$HOME/spack_installs"}   # user‑writable store
modules_root="${install_path}/modules"      # private module tree

# ------------------ one‑shot, user‑scope Spack tweaks ---------------
echo ">> Updating user config to new format (if needed) ..."
spack config --scope=user update config || true   # no-op if already current

echo ">> Ensuring solver bootstrap lives in \$HOME ..."
export SPACK_USER_BOOTSTRAP_ROOT="$HOME/.spack/bootstrap"

echo ">> Setting private install tree: $install_path"
spack config --scope=user add config:install_tree:"$install_path"

echo ">> Adding site install tree as an upstream ..."
spack config --scope=user add upstreams:system:install_tree:/opt/ohpc/pub/spack/opt/spack

echo ">> Directing TCL modulefiles into: $modules_root"
spack config --scope=user add modules:default:roots:tcl:"$modules_root"

# (Optional) discover externals — uncomment if/when you want it
# echo ">> Discovering external packages (loaded modules, system tools) ..."
# spack external find --scope=user

# ---------------------------- build --------------------------------
echo ">> Installing package: $pkg"
spack install "$pkg"

echo ">> Done.  Prefixes are under $install_path"
echo ">> Modulefiles are under $modules_root"
